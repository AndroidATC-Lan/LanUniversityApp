<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/imgFotoDoInstrutor"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtNomeDoInstrutor"
        android:textAlignment="viewStart"
        android:singleLine="true"
        android:layout_toEndOf="@+id/imgFotoDoInstrutor"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imgFotoDoInstrutor" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtHistoriaDoInstrutor"
        android:singleLine="true"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/imgFotoDoInstrutor"
        android:layout_below="@+id/txtNomeDoInstrutor"
        android:layout_alignParentLeft="false"
        android:layout_alignWithParentIfMissing="false" />

</RelativeLayout>